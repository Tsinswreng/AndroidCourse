<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 标题栏（模拟） -->
    <TextView
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="撰写评论"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:background="#FF9800"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/lishu"
        android:padding="8dp"/>

    <!-- 评论内容输入框 -->
    <EditText
        android:id="@+id/editTextComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="写下你的评论..."
        android:layout_below="@id/titleBar"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:textSize="18sp"/>

    <!-- 提交评论按钮 -->
    <Button
        android:id="@+id/buttonSubmitComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交评论"
        android:layout_below="@id/editTextComment"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/lishu"
        android:textSize="20sp"
        android:background="@drawable/button_background_blue"
        android:textColor="@android:color/white"
        android:padding="12dp"/>

    <!-- 评论区 -->
    <TextView
        android:id="@+id/textViewCommentSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论区"
        android:textSize="24sp"
        android:fontFamily="@font/lishu"
        android:layout_below="@id/buttonSubmitComment"
        android:layout_marginTop="32dp"/>

    <!-- 评论区列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCommentSection"
        android:layout_marginTop="16dp"
        android:padding="12dp"/>

</RelativeLayout>
